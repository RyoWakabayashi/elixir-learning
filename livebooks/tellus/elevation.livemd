```elixir
get_heatmap = fn dem, min_dig, max_dig ->
  dem
  |> Nx.subtract(min_dig)
  |> Nx.multiply(256 / (max_dig - min_dig))
  |> Nx.as_type(:u8)
  |> then(&[src: &1, colormap: Evision.Constant.cv_COLORMAP_JET()])
  |> Evision.applyColorMap()
end
